{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "jest": true,
  },
  "rules": {
    "max-len": [2, 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "global-require": "off",
    "import/no-duplicates": "off"
  },
  settings: {
    "import/resolver": {
      "webpack": {
        "config": "./docs/webpack.config.js"
      }
    }
  }
}
